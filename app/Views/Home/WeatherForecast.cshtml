@model IEnumerable<WeatherForecast>
@{ Layout = "_Layout"; ViewBag.Title = "All WeatherForecast";}
  
<h2>All WeatherForecast</h2>
@* <a asp-action="AddReservation" class="btn btn-sm btn-primary">Date</a>
<a asp-action="GetReservation" class="btn btn-sm btn-secondary">TemperatureC</a> *@
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Date</th>
            <th>TemperatureC</th>
            <th>TemperatureF</th>
            <th>Summary</th>
            </tr>
            </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Date</td>
                <td>@r.TemperatureC</td>
                <td>@r.TemperatureF</td>
                <td>@r.Summary</td>
            </tr>
        }
    </tbody>
</table>